!!!
%html
	%head
		%title= @titulo
		%meta{:content => "Nt4yuNtUVNnw0CLw5m037M5M2xIGnehyYA8kWdeDmPY", :name => "google-site-verification"}
		= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
		= javascript_include_tag 'application', 'data-turbolinks-track' => true
		= csrf_meta_tags
	%body
		%nav.navbar.navbar-inverse.navbar-fixed-top
			.container
				.navbar-header
					%button.navbar-toggle.collapsed{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
						%span.sr-only Toggle navigation
						%span.icon-bar
						%span.icon-bar
						%span.icon-bar
					%a.navbar-brand.logo_principal(href='#')
						%img(src="../img/logo_1.png")
		%section.logo_numedi_stroke
			%objects
				%embed(src="/img/logo_numedia.svg")
		= yield
		
		%section.wrap_maps
			%section#map
		%section.contacto
			%h1.titulo_principal.fondo_contacto CONTACTO
			.container
				.row
					.col-md-6
						.imagen_logo
							img(src="img/logo_numedi_gris.jpg")
					.col-md-6
						.formulario
							= form_for Contacto.new, :html => {:class => 'formulario_numedia'} do |f|
								= f.label :nombre 
								= f.text_field :nombre, required:true, :placeholder => "nombre", class: "texto_input" 
								%br
								= f.label :email 
								= f.text_field :email, required:true, required:true, :placeholder => "email", class: "texto_input" 
								%br
								= f.label :mensaje 
								= f.text_area :mensaje, as: :text , required:true, :placeholder => "mensaje", class: "text_are_input" 
								.hidden
									= f.label :nickname 
									= f.text_field :nickname, hint: 'Deja este espacio en blanco ;)' 
								%br
								= f.submit 'ENVIAR', class: 'submit_input' 
							end 
		%section.footer
			.container
				.row
					.col-md-6
						.wrap_botones_footer
							.correo_numedia PROYECTOS
							.correo_numedia SERVICIOS
							.correo_numedia CONTACTO
						.wrap_botones_footer
							.sociales_fila
								%a(href="www.facebook.com")
									%img(src="img/btn_face.png")
								%a(href="www.behance.com")
									%img(src="img/btn_behance.png")
							.sociales_fila
								%a(href="www.linkedin.com")
									%img(src="img/btn_linke.png")
								%a(href="www.instagram.com")
									%img(src="img/btn_insta.png")
						.wrap_botones_footer
							.correo_numedia HOLA@NUMEDIA.COM
							.correo_numedia 477 7 87 45 93
					.col-md-6
						.wrap_n_numedia
							%img(src="img/n_numedia_blanco.png")

		%script{:type => "text/javascript", :src => "https://maps.googleapis.com/maps/api/js?sensor=false"}


